{
    "manifest_version": 3,
    "name": "Amazon Review Summarizer",
    "version": "1.0",
    "description": "Summarizes (using Gen AI) reviews for Amazon products and highlights salient details and statistics",
    "icons": {
        "16": "images/amazon.png",
        "32": "images/amazon.png",
        "48": "images/amazon.png",
        "128": "images/amazon.png"
    },
    "host_permissions": ["https://*/"],
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
    "storage"
    ]
}